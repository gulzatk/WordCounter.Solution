@{
Layout = "_Layout";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Word Counter</title>
  </head>
  <body>
    <div class="container">
    <div class="jumbotron">
    <h1>Welcome to the Word Counter Game!</h1>
  </div>
    <h3>Fill in the blanks to play.</h3><br>
    <form action="/words/result" method="post">
      <label for="word">Enter a word</label>
      <input id="word" name="word" type="text">

      <label for="sentence">Enter a sentence</label>
      <input id="sentence" name="sentence" type="text">
      <button type="submit">Submit</button>
    </form>
  </div>
  </body>
</html>
